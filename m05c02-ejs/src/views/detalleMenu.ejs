<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/navbar') %>

    <!-- Header -->
    <%- include('./partials/header') %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%- producto.nombre %></h1>
          <br />
          <h4><%- producto.descripcion %></h4>
          <p><%- producto.descripcion_detallada %></p>
          <p class="ps-text-grey">U$S <%- producto.precio %></p>
        </div>

        <%- include('./partials/img-menu', { imagen: producto.imagen }) %>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer') %>
    </div>
  </body>
</html>
